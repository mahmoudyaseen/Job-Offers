@model JobOffersProject.Models.Job

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Details</h2>

<!--Displaynamefor -> display name of attribute - displayfor -> display value of attribute-->
<div>
    <h4>Job</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.categories.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.categories.CategoryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobDescription)
        </dt>

        <dd>
            <!--HtmlDecode -> decode string to html to show result of CKEditor-->
            @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(model => model.JobDescription).ToString()))
            @*@Html.DisplayFor(model => model.JobDescription)*@
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobImage)
        </dt>

        <dd>
            @* i can use @Html.Displayfor(model=>model.JobImage) or @Model.JobImage*@
            <img src="~/Uploads/@Model.JobImage" class="thumbnail" style="width:200px;height:200px" />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
