@model IEnumerable<JobOffersProject.Models.JobGroupViewModel>

@foreach (var item in Model)
{
    <h3>@item.JobTitle</h3>
    <table class="table">
        <tr>
            <th>
                UserName
            </th>
            <th>
                Message
            </th>
            <th>
                ApplyDate
            </th>
            <th></th>
        </tr>

        @foreach (var applyForJobItem in item.ApplyForJobs)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => applyForJobItem.user.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => applyForJobItem.Message)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => applyForJobItem.ApplyDate)
                </td>
            </tr>
        }

    </table>

}
