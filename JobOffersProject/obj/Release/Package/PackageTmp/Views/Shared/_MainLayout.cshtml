                    </ul>
                </div>
            </div>
        </div>
        <div class="subfooter">
            <p>All Rights Reserved.</p>
        </div>
    </footer>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    @RenderSection("Script" , required:false)
</body>
</html>
