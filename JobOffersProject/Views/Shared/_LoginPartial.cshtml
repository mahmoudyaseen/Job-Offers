@using Microsoft.AspNet.Identity
@using WebApplication1.Models <!--namespace of applicationdbcontext-->
<!--if user is already logged in-->
@if (Request.IsAuthenticated)
{
    //start new form will go to logoff action in account controller with id = logoff
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoff" }))
    {
        //for script
        @Html.AntiForgeryToken()
        //i need some details about user so i need object from applicationdbcontext
        var db = new ApplicationDbContext();
        var userId = User.Identity.GetUserId();
        var curuser = db.Users.Where(a => a.Id == userId).SingleOrDefault();
        <ul class="navbar-nav navbar-right">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Hello  @User.Identity.GetUserName()
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    @if (curuser.UserType == "Applier")
                    {
                        //name of controlle / action name
                        <a class="dropdown-item" href="~/Home/GetJobByUser">Jobs You Applied For</a>
                    }
                    else
                    {
                        <a class="dropdown-item" href="~/Home/GetJobByPublisher">Jobs You Offerd</a>
                        <a class="dropdown-item" href="~/Jobs/Create">Add Job</a>
                    }
                    <a class="dropdown-item" href="~/Account/EditProfile">Edit Profile</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="javascript:document.getElementById('logoff').submit()">Log Out</a>
                </div>
            </li>
        </ul>

    }

}
else
{
    <ul class="navbar-nav navbar-right">
        <li class="nav-item">
            <a class="nav-link" href="~/Account/Login">Log in</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="~/Account/Register">Sign up</a>
        </li>
    </ul>
}